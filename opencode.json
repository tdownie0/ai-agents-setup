{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-orchestrator"],
  "model": "opencode/big-pickle",
  "small_model": "opencode/big-pickle",
  "mode": {
    "plan": {
      "model": "opencode/big-pickle",
      "description": "Architect: Uses big-pickle for complex path logic."
    },
    "build": {
      "model": "opencode/big-pickle"
    },
    "worker": {
      "model": "opencode/big-pickle",
      "description": "Sub-agent: Uses Big Pickle for high-volume file writing."
    }
  },
  "mcp": {
    "MCP_DOCKER": {
      "type": "remote",
      "url": "http://mcp-gateway:8811/sse",
      "enabled": true
    }
  }
}
